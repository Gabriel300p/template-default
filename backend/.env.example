# Application Configuration
NODE_ENV=development
APP_NAME=Template Backend
APP_VERSION=1.0.0
APP_DESCRIPTION=API robusta e escal√°vel
PORT=3000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/template_db
DB_SSL=false
DB_LOGGING=false
DB_CONNECTION_LIMIT=10

# JWT Configuration
JWT_SECRET=your-jwt-secret-change-in-production-use-long-random-string
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=30d
JWT_ALGORITHM=HS256
JWT_ISSUER=template-backend
JWT_AUDIENCE=template-frontend

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_ATTEMPTS=5
PASSWORD_LOCKOUT_DURATION=900000

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# OAuth2 Configuration
# Google OAuth
GOOGLE_OAUTH_ENABLED=false
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/google/callback

# GitHub OAuth
GITHUB_OAUTH_ENABLED=false
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/github/callback

# Microsoft OAuth
MICROSOFT_OAUTH_ENABLED=false
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/microsoft/callback
MICROSOFT_TENANT=common

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=300
REDIS_SESSION_TTL=86400

# Email Configuration
EMAIL_SERVICE_ENABLED=false
EMAIL_PROVIDER=nodemailer
EMAIL_FROM=noreply@template.com
EMAIL_VERIFICATION_ENABLED=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info

# Monitoring Configuration
ENABLE_METRICS=false
METRICS_PATH=/metrics

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Development Configuration
DB_SYNCHRONIZE=false
DB_DROP_SCHEMA=false

