{
  "templates": {
    "default": {
      "name": "Template Padrão",
      "description": "Template completo para documentação de features",
      "enabled": true,
      "audiences": {
        "developer": {
          "enabled": true,
          "filename": "technical.md",
          "sections": [
            "overview",
            "components",
            "props",
            "hooks",
            "apis",
            "examples",
            "tests"
          ]
        },
        "designer": {
          "enabled": true,
          "filename": "design.md",
          "sections": [
            "overview",
            "ui-elements",
            "interactions",
            "responsive",
            "accessibility"
          ]
        },
        "business": {
          "enabled": true,
          "filename": "business.md",
          "sections": [
            "overview",
            "user-flows",
            "business-rules",
            "acceptance-criteria"
          ]
        }
      }
    },
    "minimal": {
      "name": "Template Mínimo",
      "description": "Template simplificado com informações essenciais",
      "enabled": false,
      "audiences": {
        "all": {
          "enabled": true,
          "filename": "readme.md",
          "sections": [
            "overview",
            "usage",
            "components"
          ]
        }
      }
